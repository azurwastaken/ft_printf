NAME = ft_printf 
LIB = ./libft/libft.a
SRCS = src/ft_printf.c src/ft_parse.c src/parse_flag.c main.c src/ft_lltoa.c src/specifier.c src/specifier_handler.c src/length_handlers.c src/flag_handler.c src/ft_strfreedup.c
OBJS = bin/ft_printf.o main.o bin/ft_parse.o bin/parse_flag.o bin/ft_lltoa.o bin/specifier.o bin/specifier_handler.o bin/length_handlers.o bin/flag_handler.o bin/ft_strfreedup.o

all: $(NAME)

$(NAME): $(OBJS)
	make -C ./libft
	make -C libft/ clean
	gcc -Wall -Wextra -Werror -g $(SRCS) $(LIB) -o $(NAME)

clean:
	/bin/rm -f $(OBJS)
	make -C libft/ clean

fclean: clean
	/bin/rm -f $(NAME)
	make -C libft/ fclean

re: fclean all
